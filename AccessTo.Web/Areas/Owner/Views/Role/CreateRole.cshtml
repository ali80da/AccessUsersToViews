@model CreateRoleDataMo

@{
    ViewData["Title"] = "CreateRole";
    Layout = "../../Views/Shared/_MainLayout";
}

<h1>CreateRole</h1>
<form asp-controller="Role" asp-action="CreateRole" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <br />
    <input asp-for="RoleName" />
    <br />
    <span class="text-danger" asp-validation-for="RoleName"></span>

    @for (int i = 0; i < Model.AreaAndControllerAndActionNames.Count; i++)
    {
        <div class="container">
            <div class="form-group">
                <input asp-for="AreaAndControllerAndActionNames[i].IsSelected" />
                <input type="hidden" readonly="readonly" asp-for="AreaAndControllerAndActionNames[i].ActionName" />
                <input type="hidden" readonly="readonly" asp-for="AreaAndControllerAndActionNames[i].ControllerName" />
                <input type="hidden" readonly="readonly" asp-for="AreaAndControllerAndActionNames[i].AreaName" />
                <label for="ActionAndControllerNames_@(i)__IsSelected">
                    @(Model.AreaAndControllerAndActionNames[i].AreaName ?? "NoArea") -
                    @Model.AreaAndControllerAndActionNames[i].ControllerName -
                    @Model.AreaAndControllerAndActionNames[i].ActionName
                </label>
            </div>
        </div>
    }

    <button class="btn btn-success" type="submit">Submit</button>
</form>