@model List<GetRolesInfoDataMo>
@{
    ViewData["Title"] = "Main All Roles";
}

<h1>@ViewData["Title"]</h1>

<a asp-area="Owner" asp-controller="Role" asp-action="CreateRole">Create Role</a>

<div class="container">
    @if (Model.Any())
    {
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-group">
                Name = @Model[i].RoleName
                <br />
                RoleId = @Model[i].RoleID
            </div>
        }
    }
    else
    {
        <p>No Role Found.</p>
    }
</div>